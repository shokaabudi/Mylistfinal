<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#303F9F"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.abud.mylist.MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="49dp"
        android:text="My List"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:textStyle="italic" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp"
        android:scaleType="fitXY"
        android:src="@drawable/shop" />

    <Button
        android:id="@+id/btn_manual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView"
        android:layout_alignRight="@+id/textView"
        android:layout_below="@+id/imageView"
        android:layout_marginTop="36dp"
        android:background="#3F51B5"
        android:text="Manual"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/btn_automatic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_manual"
        android:layout_alignStart="@+id/btn_manual"
        android:layout_below="@+id/btn_manual"
        android:layout_marginTop="23dp"
        android:background="#3F51B5"
        android:text="Automatic"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/btn_saved"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_automatic"
        android:layout_alignStart="@+id/btn_automatic"
        android:layout_below="@+id/btn_automatic"
        android:layout_marginTop="23dp"
        android:background="#3F51B5"
        android:text="Saved Lists"
        android:textColor="#ffffff" />
</RelativeLayout>
